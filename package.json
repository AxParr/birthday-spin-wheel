{
  "name": "spin-wheel",
  "displayName": "Spin Wheel",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node bin/build.js -entryPoint=src/wheel.js -serve",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "lint": "eslint src/** --fix",
    "build": "npm run lint && npm run test && npm run build-esm && npm run build-iife",
    "build-esm": "node bin/build.js -entryPoint=src/wheel.js -esm",
    "build-iife": "node bin/build.js -entryPoint=src/wheel.js -iife"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CrazyTim/spin-wheel.git"
  },
  "author": "CrazyTim",
  "license": "MIT",
  "homepage": "https://github.com/CrazyTim/spin-wheel#readme",
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "esbuild": "^0.13.11",
    "eslint": "^7.32.0",
    "jest": "^27.4.3"
  }
}
